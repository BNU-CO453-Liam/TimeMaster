<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TimeMaster"
        tools:targetApi="31">

        <activity
            android:name=".controller.Login"
            android:windowSoftInputMode="adjustPan"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controller.Register"
            android:windowSoftInputMode="adjustPan"
            android:exported="false">
        </activity>

        <activity
            android:name=".controller.Main"
            android:exported="false">
        </activity>

        <activity
            android:name=".controller.Tasks"
            android:windowSoftInputMode="adjustPan"
            android:exported="false">
        </activity>

        <activity
            android:name=".controller.Metrics"
            android:exported="false">

        </activity>

        <activity
            android:name=".controller.Performance"
            android:exported="false">
        </activity>

        <activity
            android:name=".controller.Account"
            android:exported="false">
        </activity>

        <activity
            android:name=".controller.SharedData"
            android:windowSoftInputMode="adjustPan"
            android:exported="false">
        </activity>

    </application>



</manifest>