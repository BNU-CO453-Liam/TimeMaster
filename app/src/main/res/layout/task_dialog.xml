<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/dialogTaskNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter task name"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:textColor="#000000"
        android:textColorHint="#7E7E7E"
        android:imeActionLabel="Next"
        android:imeActionId="@+id/imeNext"
        tools:ignore="InvalidImeActionId" />

    <TextView
        android:id="@+id/textViewSetDailyTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogTaskNameEditText"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:text="Set Daily Target:"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TimePicker
        android:id="@+id/dialogDailyTargetTimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSetDailyTarget"
        android:descendantFocusability="blocksDescendants"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/dialogSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"/>
</LinearLayout>